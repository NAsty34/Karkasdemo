<Window x:Class="karkas.kod_pr"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:karkas"
        mc:Ignorable="d"
        Title="kod_pr" MinHeight="256" MinWidth="487" Icon="beauty_logo.ico">
    <Viewbox>
        <Grid Height="256" Width="487">
        <StackPanel Orientation="Horizontal">
        <Image Source="beauty_logo.png" HorizontalAlignment="Left" VerticalAlignment="Top" Width="70" Margin="5 5 70 0"/>
        <TextBlock Text="Авторизация" FontFamily="Tahoma" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 20 0 0"/>
        </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0 100 0 0" >
            <TextBlock Width="200"  Text="Введите код:" FontFamily="Tahoma" FontSize="30"/>
            <TextBox Width="200" Name="kodik" FontFamily="Tahoma" FontSize="30" KeyDown="kodik_KeyDown" />
        </StackPanel>
        <Button Click="Button_Click" Width="150" Margin="0 0 0 20" Content="Войти" Style="{DynamicResource ResourceKey=Button1}" Height="40" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
    </Grid>
    </Viewbox>
</Window>
